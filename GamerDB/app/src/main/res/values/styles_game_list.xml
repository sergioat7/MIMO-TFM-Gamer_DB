<resources>

    <style name="ImageSlider">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/image_slider_margin</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageLoadingText">
        <item name="android:layout_marginTop">@dimen/image_progress_bar_text_margin_top</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="GameCellName">
        <item name="android:layout_marginStart">@dimen/game_cell_name_margin</item>
        <item name="android:layout_marginEnd">@dimen/game_cell_name_margin</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/game_cell_name_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="GameCellRating">
        <item name="android:layout_marginEnd">@dimen/game_cell_name_margin</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/game_cell_name_text_size</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="LinePageIndicator">
        <item name="lineWidth">@dimen/game_images_indicator_width</item>
        <item name="strokeWidth">@dimen/game_images_indicator_stroke_width</item>
        <item name="selectedColor">@color/buttonPrimary</item>
        <item name="unselectedColor">@color/buttonSecondary</item>
    </style>

</resources>