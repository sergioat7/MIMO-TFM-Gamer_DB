<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Toolbar.List" parent="AppTheme.Toolbar">
        <item name="android:background">@color/colorPrimarySemiTransparent</item>
    </style>

    <style name="AppTheme.Toolbar.Detail" parent="AppTheme.Toolbar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GameDetailName">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="GameDetailRating">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="GameDetailButtons">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:background">@drawable/bordered_button</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="GameDetailButtons.Left" parent="GameDetailButtons">
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="GameDetailButtons.Right" parent="GameDetailButtons">
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="GameDetailDescription">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">7</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GameDetailDescriptionButton">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@color/buttonSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="GameDetailInfo">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="GameDetailInfo.Title" parent="GameDetailInfo">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GameDetailInfo.Title.Left" parent="GameDetailInfo.Title">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="GameDetailInfo.Title.Right" parent="GameDetailInfo.Title">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="GameDetailInfo.Value" parent="GameDetailInfo">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="GameDetailInfo.Value.Left" parent="GameDetailInfo.Value">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="GameDetailInfo.Value.Right" parent="GameDetailInfo.Value">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

</resources>