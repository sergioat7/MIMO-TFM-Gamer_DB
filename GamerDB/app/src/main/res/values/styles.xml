<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Toolbar.List" parent="AppTheme.Toolbar">
        <item name="android:background">@color/colorPrimarySemiTransparent</item>
    </style>

    <style name="AppTheme.Toolbar.Detail" parent="AppTheme.Toolbar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressBar">
        <item name="android:layout_marginBottom">@dimen/swipe_refresh_layout_margin_bottom</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorSecondary</item>
    </style>

</resources>