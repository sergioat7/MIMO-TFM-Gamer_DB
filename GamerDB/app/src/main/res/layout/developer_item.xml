<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image_view_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_small"
        android:contentDescription="@string/developer_background_image"
        app:layout_constraintBottom_toBottomOf="@id/view_image_background"
        app:layout_constraintEnd_toEndOf="@id/view_image_background"
        app:layout_constraintStart_toStartOf="@id/view_image_background"
        app:layout_constraintTop_toTopOf="@id/view_image_background"
        />

    <View
        android:id="@+id/view_image_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_huge"
        android:background="@drawable/bordered_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/image_view_developer"
        android:layout_width="@dimen/size_semi_huge"
        android:layout_height="@dimen/size_semi_huge"
        android:layout_marginTop="@dimen/spacing_larger"
        android:contentDescription="@string/developer_image"
        app:layout_constraintEnd_toEndOf="@id/view_image_background"
        app:layout_constraintStart_toStartOf="@id/view_image_background"
        app:layout_constraintTop_toTopOf="@id/view_image_background"
        />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/view_image_background"
        app:layout_constraintStart_toStartOf="@id/view_image_background"
        app:layout_constraintTop_toBottomOf="@+id/image_view_developer"
        style="@style/DeveloperCellName"
        />

    <TextView
        android:id="@+id/text_view_positions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/view_image_background"
        app:layout_constraintStart_toStartOf="@id/view_image_background"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name"
        style="@style/DeveloperCellPositions"
        />

    <TextView
        android:id="@+id/text_view_games_developed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/games_developed_title"
        app:layout_constraintBottom_toBottomOf="@id/view_image_background"
        app:layout_constraintEnd_toStartOf="@+id/text_view_games_developed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/view_image_background"
        app:layout_constraintTop_toBottomOf="@+id/text_view_positions"
        app:layout_constraintVertical_bias="1.0"
        style="@style/DeveloperCellGamesCountTitle"
        />

    <TextView
        android:id="@+id/text_view_games_developed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_games_developed_title"
        app:layout_constraintEnd_toEndOf="@id/view_image_background"
        app:layout_constraintTop_toTopOf="@+id/text_view_games_developed_title"
        app:layout_constraintVertical_bias="1.0"
        style="@style/DeveloperCellGamesCount"
        />
</androidx.constraintlayout.widget.ConstraintLayout>